{
  "buttons_per_row": 6,
  "column_spacing": 10,
  "row_spacing": 10,
  "delay_before_closing": 500,
  "buttons": [
    {
      "id": "lock",
      "command": "loginctl lock-session",
      "icon": "󰍁",
      "text": "<u>L</u>ock",
      "keybind": "l"
    },
    {
      "id": "logout",
      "command": "hyprctl dispatch exit",
      "icon": "󰍃",
      "text": "L<u>o</u>gout",
      "keybind": "o"
    },
    {
      "id": "suspend",
      "command": "lockscreen.sh & disown && systemctl suspend",
      "icon": "󰏦",
      "text": "S<u>u</u>spend",
      "keybind": "u"
    },
    {
      "id": "shutdown",
      "command": "systemctl poweroff",
      "icon": "󰐥",
      "text": "<u>S</u>hutdown",
      "keybind": "s"
    },
    {
      "id": "hibernate",
      "command": "systemctl hibernate",
      "icon": "󰸨",
      "text": "<u>H</u>ibernate",
      "keybind": "h"
    },
    {
      "id": "reboot",
      "command": "systemctl reboot",
      "icon": "󰑧",
      "text": "<u>R</u>eboot",
      "keybind": "r"
    }
  ]
}
